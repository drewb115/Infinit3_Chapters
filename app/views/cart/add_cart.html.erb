<!-- app/views/cart/added_to_cart.html.erb -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Added to Cart</title>
  <link rel="stylesheet" href="assets/stylesheets/application.css">
</head>
<body>

<h1>Added to Cart</h1>

<div>
  <!-- Display cart contents here -->
  <h2>Your Cart:</h2>
  <ul>
    <% session[:cart].each do |product_id, quantity| %>
      <li>Product ID: <%= product_id %>, Quantity: <%= quantity %></li>
    <% end %>
  </ul>
</div>

<!-- Link to continue shopping -->
<div class="continue-shopping-button">
  <a href="/" class="continue-shopping-link">Continue Shopping</a>
</div>

<!-- Link to view cart -->
<div class="view-cart-button">
  <a href="/cart" class="view-cart-link">View Cart</a>
</div>

</body>
</html>
